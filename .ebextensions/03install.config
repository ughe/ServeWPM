  01pip:
    command: "sudo wget https://bootstrap.pypa.io/get-pip.py"
    command: "sudo -H python get-pip.py"
    command: "sudo rm get-pip.py"
    command: "sudo pip install -U -r OpenWPM/requirements.txt"
#  02pip:
#    command: "sudo pip install -U -r requirements.txt"
#  03pip:
